{
	"extends": "airbnb",
    "rules": {
        "no-console": ["warn"],
        "semi": ["warn", "never"],
        "indent": ["error", 4],
        "react/jsx-indent": ["error", 4],
        "react/forbid-prop-types": ["off"],
        "no-underscore-dangle": ["error", { "allow": ["_id", "_metadata"] }],
        "no-param-reassign": ["error", {"props": false}],
        "no-plusplus": ["off"],
        "no-multi-spaces": ["error", {
            "ignoreEOLComments": true
        }]
    },
}